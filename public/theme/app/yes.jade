    .yes-screen.js-yes-screen
      .yes-screen-wrapper
        .wrapper-in
          .yes-top-text Ваша Camry, Ваша комплектация.
        .yes-overlay
        .yes-screen__list.js-yes-list
          .list__cont.js-yes-cont
            //- div
              each i in [0,1,2,3,4,5]
                .yes-screen__option.empty-option-before
              each i in [0,1,2,3,4,5,6]
                .yes-screen__option.js-yes-option(data-id="#{i}")
                  .yes-screen__cont
                    .list__other-items
                      each j in [5,4,3,2,1,0]
                        .list__other-item.js-ksp(data-td="#{i}" data-tr="#{j}")
